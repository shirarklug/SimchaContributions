@using GiftContributions.Data;
@model SimchosViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>
    <div b-2ya7vgwtda class="container">
        <main b-2ya7vgwtda role="main" class="pb-3" style="margin-top: 60px;">
            
<div class="header">
    <h1>Simchos</h1>
</div>
<div class="row header">
    <div class="col-md-4">
        <button class="btn btn btn-outline-dark" id="new-simcha">New Simcha</button>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Contributions</th>
                <th>Simcha Name</th>
                <th>Contributor Count</th>
                <th>Total</th>
                <th>Simcha Date</th>
            </tr>
        </thead>
        <tbody>
                        @foreach(Simcha s in Model.Simchos)
                        {
                            <tr>
                                <td><a href="/home/addcontribution?id=@s.SimchaId" class="btn btn-outline-info">Add Contributions</a></td>
                                <td>@s.SimchaName</td>
                                <td></td>
                                <td>@s.Total.ToString("C")</td>
                                <td>@s.SimchaDate.ToShortDateString()</td>
                            </tr>
                        }
        </tbody>
   </table>
</div>
            <div class="modal fade" id="add-modal" tabindex="-1" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">New Simcha</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form method="post" action="/home/newSimcha">
                                <div class="form-group">
                                    <label class="form-label">Simcha Name</label>
                                    <input class="form-control" name="simchaName" placeholder="Simcha Name" type="text">
                                </div>
                                <div class="form-group mt-3">
                                    <label class="form-label">Date</label>
                                    <input type="date" name="simchaDate" class="form-control" id="datepicker">
                                </div>
                                <div class="modal-footer">
                                    <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cancel</button>
                                    <button class="btn btn-primary" name="commit">Save</button>
                                </div>
                            </form>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->
        </main>
    </div>

</body>
@section Scripts {
    <script src="~/js/newsimcha.js"></script>
}
</html>


